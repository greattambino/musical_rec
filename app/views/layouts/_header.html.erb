<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "MusicalRec", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to "Home",      root_path %></li>
        <li><%= link_to "Artists",   artist_path %></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li>
          <div style="display:inline">
            <%= form_tag search_videos_path, method: :get, class: "form-inline", 
                                             role: "search" do %> 
              <div class="form-group">
                <%= text_field_tag :search, params[:search], class: "form-control", 
                                           id: "searchForm", placeholder: "Search" %>
              </div>
              <%= button_tag(type: "submit", class: "btn btn-default", 
                                         id: "searchButton") do %>
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
              <% end %>
            <% end %>   
          </div>      
        </li>
        <li><%= link_to "About Us",  about_path %></li>
        <li><%= link_to "Contact",   contact_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-user" aria-hidden="true"></span> 
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>